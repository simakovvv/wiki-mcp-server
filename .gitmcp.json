{
  "name": "wiki-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for searching and analyzing Wikipedia articles",
  "entrypoint": "python3 wiki_mcp_server.py",
  "environment": {
    "OPENROUTER_API_KEY": "your_api_key_here"
  },
  "requirements": [
    "requests==2.31.0",
    "nltk==3.8.1",
    "spacy==3.7.2",
    "scikit-learn==1.3.2",
    "python-dotenv==1.0.0",
    "fastapi==0.104.1",
    "uvicorn==0.24.0",
    "pydantic==2.5.2",
    "beautifulsoup4==4.12.2"
  ],
  "api": {
    "base_url": "https://gitmcp.io/simakovvv/wiki-mcp-server",
    "endpoints": {
      "search": {
        "path": "/search",
        "method": "POST",
        "sse": true,
        "body": {
          "topic": "string",
          "max_results": "integer",
          "include_images": "boolean",
          "model": "string"
        }
      },
      "evaluate": {
        "path": "/evaluate",
        "method": "POST",
        "sse": false,
        "body": {
          "article": "object",
          "model": "string"
        }
      },
      "analyze": {
        "path": "/analyze",
        "method": "POST",
        "sse": false,
        "body": {
          "article": "object",
          "model": "string"
        }
      },
      "stats": {
        "path": "/stats",
        "method": "GET",
        "sse": false
      }
    }
  },
  "capabilities": {
    "tools": true,
    "resources": true
  }
} 